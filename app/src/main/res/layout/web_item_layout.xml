<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/web_itme_img_size"
        android:layout_height="@dimen/web_itme_img_size"
        android:id="@+id/web_item_img"
        android:layout_centerInParent="true"
        android:background="@mipmap/blog_headhead"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/web_item_img"
       android:layout_height="wrap_content"
       android:singleLine="true"
       android:ellipsize="middle"
       android:id="@+id/web_item_tx"
       android:text="web" />
</RelativeLayout>
